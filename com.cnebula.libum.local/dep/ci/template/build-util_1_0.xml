								</fileset>
							</path>
		    			</classpath>
		        		<classpath>
		        			<path location="@{deploy.root}/bundles/@{bundle.name}/">
		        			</path>
		        		</classpath>
		        		<formatter type="brief" usefile="false"/>
		        		<formatter type="xml"/>
		        		<batchtest todir="@{deploy.root}/test/component/" >
		        			<fileset dir="@{deploy.root}/bundles/@{bundle.name}/"
		        				includes="**/Test*.class"/>
		        			<fileset dir="@{deploy.root}/bundles/@{bundle.name}/"
		        					includes="**/*Test.class"/>
		        		</batchtest>
	        		</junit>
	        </sequential>
	    </macrodef>
	
	
